<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping schema="TIMELINE_SCHEMA">
	<class name="org.ag.timeline.business.model.AuditRecordDetail" table="AUDIT_DETAIL_T" dynamic-update="true" dynamic-insert="true">

		<id name="id" type="java.lang.Long" column="ID">
			<generator class="sequence">
				<param name="sequence">AUDIT_DETAIL_S</param>
			</generator>
		</id>

		<property name="fieldName" type="string" not-null="true">
			<column name="FIELD_NAME" />
		</property>
		<property name="fieldType" type="integer" not-null="true">
			<column name="FIELD_TYPE" />
		</property>
		<property name="oldValue" type="string">
			<column name="OLD_VALUE" />
		</property>
		<property name="newValue" type="string">
			<column name="NEW_VALUE" />
		</property>
		<many-to-one name="auditRecord" class="org.ag.timeline.business.model.AuditRecord" column="AUDIT_ID" cascade="none" not-null="true" />
	</class>
</hibernate-mapping>