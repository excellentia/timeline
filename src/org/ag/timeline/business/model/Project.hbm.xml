<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping schema="TIMELINE_SCHEMA">
	<class name="org.ag.timeline.business.model.Project" table="PROJECT_T" dynamic-update="true" dynamic-insert="true">

		<id name="id" type="java.lang.Long" column="ID">
			<generator class="sequence">
				<param name="sequence">PROJECT_S</param>
			</generator>
		</id>

		<property name="name" type="string" not-null="true">
			<column name="NAME" />
		</property>

		<property name="active" type="boolean">
			<column name="ACTIVE" />
		</property>

		<many-to-one name="lead" class="org.ag.timeline.business.model.User" column="LEAD_ID" cascade="none" />

		<set name="activities" cascade="all" inverse="true">
			<key column="PROJECT_ID" />
			<one-to-many class="org.ag.timeline.business.model.Activity" />
		</set>

		<property name="createUserId" type="java.lang.Long" column="CREATE_USER" not-null="true" />
		<property name="createDate" type="java.util.Date" not-null="true" column="CREATE_DATE" />
		<property name="modifyUserId" type="java.lang.Long" column="MODIFY_USER" />
		<property name="modifyDate" type="java.util.Date" column="MODIFY_DATE" />

	</class>
</hibernate-mapping>