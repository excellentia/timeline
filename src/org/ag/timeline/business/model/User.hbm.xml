<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping schema="TIMELINE_SCHEMA">
	<class name="org.ag.timeline.business.model.User" table="USER_T" dynamic-update="true" dynamic-insert="true">
		<id name="id" type="java.lang.Long" column="ID">
			<generator class="sequence">
				<param name="sequence">USER_S</param>
			</generator>
		</id>
		<property name="firstName" type="string">
			<column name="FIRST_NAME" />
		</property>
		<property name="lastName" type="string">
			<column name="LAST_NAME" />
		</property>
		<property name="password" type="string">
			<column name="PASSWORD" />
		</property>
		<property name="userId" type="string">
			<column name="USER_ID" />
		</property>
		<property name="admin" type="boolean">
			<column name="ADMIN" />
		</property>

		<property name="createUserId" type="java.lang.Long" not-null="true">
			<column name="CREATE_USER" />
		</property>

		<property name="createDate" type="java.util.Date" not-null="true">
			<column name="CREATE_DATE" />
		</property>

		<property name="modifyUserId" type="java.lang.Long" not-null="true">
			<column name="MODIFY_USER" />
		</property>

		<property name="modifyDate" type="java.util.Date">
			<column name="MODIFY_DATE" />
		</property>

	</class>
</hibernate-mapping>