<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping schema="TIMELINE_SCHEMA">
	<class name="org.ag.timeline.business.model.AuditRecord" table="AUDIT_T" dynamic-update="true"
		dynamic-insert="true">
		<id name="id" type="java.lang.Long" column="ID">
			<generator class="sequence">
				<param name="sequence">AUDIT_S</param>
			</generator>
		</id>
		<property name="operation" type="integer">
			<column name="OPERATION" />
		</property>
		<property name="operationDate" type="java.util.Date">
			<column name="OPERATION_DATE" />
		</property>
		<property name="operationTime" type="java.util.Date">
			<column name="OPERATION_TIME" />
		</property>
		<property name="entityName" type="string">
			<column name="ENTITY_NAME" />
		</property>
		<property name="entityId" type="java.lang.Long">
			<column name="ENTITY_ID" />
		</property>
		<property name="dataType" type="integer">
			<column name="DATA_TYPE" />
		</property>
		<property name="userId" type="java.lang.Long">
			<column name="USER_ID" />
		</property>
		
		<set name="details" cascade="all" inverse="true">
			<key column="AUDIT_ID" />
			<one-to-many class="org.ag.timeline.business.model.AuditRecordDetail" />
		</set>
	</class>
</hibernate-mapping>